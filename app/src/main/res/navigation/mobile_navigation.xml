<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="kr.ac.chungbuk.harmonize.ui.home.HomeFragment"
        android:label="홈"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_analytics"
        android:name="kr.ac.chungbuk.harmonize.ui.dashboard.DashboardFragment"
        android:label="분석"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="kr.ac.chungbuk.harmonize.ui.search.SearchFragment"
        android:label="검색"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="kr.ac.chungbuk.harmonize.ui.dashboard.DashboardFragment"
        android:label="찜목록"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_menu"
        android:name="kr.ac.chungbuk.harmonize.ui.more.MoreFragment"
        android:label="더보기"
